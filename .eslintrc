parser: babel-eslint
extends:
  - airbnb-base
env:
  browser: false
  node: true
rules:
  arrow-body-style: off
  camelcase: off
  class-methods-use-this: off
  func-names: off
  import/no-extraneous-dependencies: off
  max-len: [error, 120]
  newline-per-chained-call: off
  no-param-reassign: off
  no-shadow: off
  no-underscore-dangle: off
  sort-imports: off
